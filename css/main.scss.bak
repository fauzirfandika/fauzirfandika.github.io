body {
    margin: 0;
    background-color: #f2f2f2;
    font-family: 'Open Sans', sans-serif;
}

.ruchi-bar {
    position: fixed;
    top: 0px;
    width: 100%;
    background-color: rgb(255, 255, 255);
    font-size: 18px;
    height: 50px;
    overflow: hidden;
    /*box-shadow: 1px 1px 5px #9b9b9b;*/
    .ruchi-bar-content {
        position: relative;
        margin: 0 auto;
        width: fit-content;
        .ruchi-logo {
            max-height: 40px;
        }
        .ruchi-button {
            white-space: normal;
            text-decoration: none;
            color: #2D4099;
        }
        .ruchi-bar-item {
            float: left;
            display: block;
            padding-left: 50px;
            padding-right: 50px;
        }
        .ruchi-padding-13 {
            padding-top: 13px;
            padding-bottom: 13px;
        }
        .ruchi-padding-2 {
            padding-top: 2px;
            padding-bottom: 2px;
        }
    }
}

.ruchi-body {
    position: fixed;
    top: 60px;
    width: 100%;
    .ruchi-body-hero {
        position: absolute;
        width: 100%;
        height: 400px;
    }
    .ruchi-main-content {
        display: block;
        padding: 200px 150px;
        .ruchi-tagline, .ruchi-sub-tagline {
            width: 40%;
            margin: 0!important;
        }
        .ruchi-tagline {
            font-size: 36px;
        }
        .ruchi-sub-tagline {
            font-size: 18px;
            color: #494949;
        }
    }
}
